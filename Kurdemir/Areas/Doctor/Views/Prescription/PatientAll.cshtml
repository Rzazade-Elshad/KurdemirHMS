@model List<Kurdemir.BL.ViewModels.PatientVMs.PatientReadVm>

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- Page Heading -->
            <h1 class="h3 mb-2 text-gray-800">Kurdemir Hospital Management System Patients</h1>
            <p class="mb-4">Welcome</p>

            <!-- Patients Table -->
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold text-primary">Patients Table</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable">
                            <thead>
                                <tr>
                                    <th>Username</th>
                                    <th>Full Name</th>
                                    <th>Gender</th>
                                    <th>Email</th>
                                    <th>Buttons</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null && Model.Any())
                                {
                                    foreach (var patient in Model)
                                    {
                                        <tr>
                                            <td>@patient.Username</td>
                                            <td>@patient.FirstName @patient.LastName</td>
                                            <td>@patient.Gender</td>
                                            <td>@patient.Email</td>
                                            <td>
                                                <a asp-area="Doctor" asp-controller="Prescription" asp-action="UploadFile" asp-route-id="@patient.Id" class="btn btn-success btn-sm">UploadFile</a>
                                                <a asp-area="Doctor" asp-controller="Prescription" asp-action="GetFiles" asp-route-id="@patient.Id" class="btn btn-success btn-sm">GetFiles</a>

                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No patients found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->
