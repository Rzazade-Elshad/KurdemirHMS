@using Kurdemir.BL.ViewModels.DoctorVMs
@model List<DoctorReadVm>
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

	<!-- Main Content -->
	<div id="content">

		<!-- Begin Page Content -->
		<div class="container-fluid">

			<!-- Page Heading -->
			<h1 class="h3 mb-2 text-gray-800">Kurdemir Hospital Management System Appointment</h1>
			<p class="mb-4">Welcome</p>

			<!-- DataTales Example -->
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex justify-content-between align-items-center">
					<h6 class="m-0 font-weight-bold text-primary">Departments Table</h6>
						</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
							<thead>
								<tr>
									<th>Id</th>
									<th>Image</th>
									<th>FullName</th>
									<th>UserName</th>
									<th>Gender</th>
									<th>Department</th>
									<th>Buttons</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var doctor in Model)
								{
									<tr>
										<td>@doctor.Id</td>
										<td><img class="img-fluid" src="~/Upload/image/Doctor/@doctor.ImgUrl" alt="" height="90" width="90"></td>
										<td>@doctor.Firstname @doctor.Lastname</td>
										<td>@doctor.Username </td>
										<td>@doctor.Gender</td>

										<td>@doctor.DepartmentName</td>
										<td>
											<a asp-area="Patient" asp-controller="Appointment" asp-action="Booking" asp-route-id="@doctor.Id" class="btn btn-success btn-sm">Booking</a>

											</td>
									</tr>
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
		<!-- /.container-fluid -->

	</div>
	<!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->
