@using Kurdemir.BL.ViewModels.AppointmentVMs
@model List<AppointmentReadVm>
<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

	<!-- Main Content -->
	<div id="content">

		<!-- Begin Page Content -->
		<div class="container-fluid">

			<!-- Page Heading -->
			<h1 class="h3 mb-2 text-gray-800">Kurdemir Hospital Management System Appointment</h1>
			<p class="mb-4">Welcome</p>

			<!-- DataTales Example -->
			<div class="card shadow mb-4">
				<div class="card-header py-3 d-flex justify-content-between align-items-center">
					<h6 class="m-0 font-weight-bold text-primary"> Old Appointments  Table</h6>
						</div>
				<div class="card-body">
					<div class="table-responsive">
						<table class="table table-bordered" id="dataTable">
							<thead>
								<tr>
									<th>Full Name</th>
									<th>Doctor Name</th>
									<th>Appoinment Time</th>
								</tr>
							</thead>
							<tbody>
								@if (Model is not null)
								{

									@foreach (var appoinment in Model)
									{
										<tr>
											<td>@appoinment.PatientFullName</td>
											<td>@appoinment.DoctorFullName</td>
											<td>@appoinment.DateTime.ToString("yyyy-MM-ddTHH:mm:ss")</td>

										</tr>
									}
								}
							</tbody>
						</table>
					</div>
				</div>
			</div>

		</div>
		<!-- /.container-fluid -->

	</div>
	<!-- End of Main Content -->
</div>
<!-- End of Content Wrapper -->
