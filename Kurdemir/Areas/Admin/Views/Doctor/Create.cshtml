@using Kurdemir.BL.ViewModels.MixViewModels
@model DoctorRegister

<div class="container mt-4">
    <p class="h4 mb-3">Register Doctor</p>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <!-- Firstname -->
        <div class="form-group">
            <label asp-for="Firstname"></label>
            <input asp-for="Firstname" class="form-control" />
        </div>

        <!-- Lastname -->
        <div class="form-group">
            <label asp-for="Lastname"></label>
            <input asp-for="Lastname" class="form-control" />
        </div>

        <!-- Gender -->
        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control">
                <option disabled selected>-- Select Gender --</option>
                <option value="0">Male</option>
                <option value="1">Female</option>
            </select>
        </div>

        <!-- Department -->
        <div class="form-group">
            <label asp-for="DepartmentId"></label>
            <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control">
                <option disabled selected>-- Select Department --</option>
            </select>
        </div>

        <!-- Image Upload -->
        <div class="form-group">
            <label asp-for="Image">Profile Image</label>
            <input asp-for="Image" type="file" class="form-control-file" />
        </div>

        <!-- Username -->
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
        </div>

        <!-- Email -->
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" type="email" class="form-control" />
        </div>

        <!-- Password -->
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <button type="submit" class="btn btn-success">Register</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

